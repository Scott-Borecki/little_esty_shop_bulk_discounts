<%= render partial: 'shared/merchant_dashboard_nav', locals: { merchant: @merchant } %>

<div class="row">
  <div class="col-sm-12">
    <p class='col-head'>
      Invoice #<%= @invoice.id %>
    </p>
  </div>
</div>

<p>
  <strong>Customer: </strong><%= @customer.first_name %> <%= @customer.last_name %><br>
  <strong>Created on: </strong><%= @invoice.created_at.strftime("%A, %B %-d, %Y") %><br>
  <strong>Total Revenue: </strong><%= number_to_currency(@invoice.total_revenue) %>
  <div id='invoice-status'>
    <strong>Status: </strong><%= @invoice.status %>
  </div>
</p>

<p class='col-head'>Items on this Invoice</p>

<table class="table">
    <tr>
      <th class="th1">Item Name</th>
      <th class="th1">Quantity</th>
      <th class="th1">Unit Price</th>
      <th class="th1">Status</th>
    </tr>

    <% @invoice.invoice_items.each do |i| %>
      <tr>
        <td style="text-align:center"><%= i.item.name %></td>
        <td style="text-align:center"><%= i.quantity %></td>
        <td style="text-align:center">$<%= i.unit_price %></td>
        <td style="text-align:center" id="the-status-<%= i.id %>"><%= form_with model: @invoice, url: merchant_invoice_path(@merchant, @invoice), method: :patch do |f| %>
                                        <%= f.select :status, Invoice.statuses.keys, selected: "#{@invoice.status}" %>
                                        <%= f.submit 'Update Invoice' %>
                                      <% end %></td>
      </tr>
    <% end %>
</table>
