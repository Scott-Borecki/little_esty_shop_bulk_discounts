<%= form_with model: model, local: true do |form| %>
  <div class='form-group row'>
    <%= form.label :percentage_discount, 'Percentage Discount (%):', class: 'col-2 control-label' %>
    <div class="col-auto">
      <%= form.text_field :percentage_discount, size: '10', class: 'form-control' %><br>
    </div>
  </div>

  <div class='form-group row'>
    <%= form.label :quantity_threshold, 'Quantity Threshold:', class: 'col-2 control-label' %>
    <div class="col-auto">
      <%= form.text_field :quantity_threshold, size: '10', class: 'form-control' %><br>
    </div>
  </div>

  <div class='form-group row'>
    <div class="col-2"></div>
    <div class="col-auto">
      <%= form.submit button_text, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
