<%= render partial: 'shared/merchant_dashboard_nav', locals: { merchant: @merchant } %>

<div class='row'>
  <div class='col-sm-12'>
    <p class='col-head'>
      <%= @item.name %>
    </p>
  </div>

  <p>
    <strong>Price: </strong>
      <%= number_to_currency(@item.unit_price / 100.00) %><br>
    <strong>Description: </strong>
      <%= @item.description %><br><br>

    <%= link_to 'Update Item', edit_merchant_item_path(@merchant, @item) %>
  </p>
</div>
