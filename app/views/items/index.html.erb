<%= render partial: 'shared/merchant_dashboard_nav', locals: { merchant: @merchant } %>

<div class="row">
  <div class="col-sm-12">
    <p class='col-head'>
      My Items
    </p>
  </div>

  <p><%= link_to "Create New Item", new_merchant_item_path(@merchant) %></p>

  <div class="col-sm-6">
    <p class='col-head'>Top Items</p>

    <ul>
      <section id="top_5">
        <% @merchant.top_5_items.each do |item| %>
          <li><%= link_to "#{item.name}", merchant_item_path(@merchant, item)  %> -
            <%= number_to_currency(item.total_revenue) %> in sales</li>
          <p> Top selling date for <%= item.name %> was <%= item.best_day %> </p>
        <% end %>
      </section>
    </ul>
  </div>

  <div class="col-sm-6">
    <p class='col-head'>Enabled Items</p>

    <ul>
      <section id="enabled">
        <% @enabled_items.each do |item| %>
          <section id="item-<%= item.id %>">
            <li>
              <%= link_to "#{item.name}", merchant_item_path(@merchant, item) %>
            </li>
            <%= button_to "Disable", merchant_item_status_path(@merchant, item), method: :patch, params: {status: "disabled"} %><br>
          </section>
        <% end %>
      </section>
    </ul>

    <p class='col-head'>Disabled Items</p>

    <ul>
      <section id="disabled">
        <% @disabled_items.each do |item| %>
          <section id="item-<%= item.id %>">
            <li>
              <%= link_to "#{item.name}", merchant_item_path(@merchant, item) %>
            </li>
            <%= button_to "Enable", merchant_item_status_path(@merchant, item), method: :patch, params: {status: "enabled"} %><br>
          </section>
        <% end %>
      </section>
    </ul>
  </div>
</div>
