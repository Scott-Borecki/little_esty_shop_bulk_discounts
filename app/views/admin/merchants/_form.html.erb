<%= form_with model: [:admin, @merchant], local: true do |form| %>
  <div class='form-group row'>
    <%= form.label :name, 'Name:', class: 'col-1 control-label' %>
    <div class="col-auto">
      <%= form.text_field :name, size: '70', class: 'form-control' %><br>
    </div>
  </div>

  <div class='form-group row'>
    <div class="col-1"></div>
    <div class="col-auto">
      <%= form.submit button_text, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
