<%= render partial: 'shared/admin_dashboard_nav' %>

<%= link_to 'Create Merchant', new_admin_merchant_path %><br><br>

<div class='row'>

  <% # LEFT COLUMN %>
  <div class='col-sm-6'>
    <p class='col-head'>
      Top Merchants
    </p>

    <ol>
      <% @merchants.top_merchants.each do |m| %>
        <div id='top-merchant-<%= m.id %>'>
          <li>
            <%= link_to "#{m.name}", admin_merchant_path(m) %><br>
            <%= number_to_currency(m.total_revenue) %> in sales
          </li>
        </div>

        <div id='top-day-<%= m.id %>'>
          <p>
            Top Selling Date for <%= m.name %> was on <%= m.best_day %>
          </p>
        </div>
      <% end %>
    </ol>
  </div>

  <% # RIGHT COLUMN %>
  <div class='col-sm-6'>
    <section id='enabled-merchants'>
      <p class='col-head'>Enabled Merchants</p>

      <% @enabled_merchants.each do |m| %>
        <section id='merchant-<%= m.id %>' class='row'>
          <div class='col-auto'>
            <%= button_to 'Disable', admin_merchant_status_path(m), method: :patch, params: { status: 'disabled' } %><br>
          </div>

          <div class='col'>
            <%= link_to "#{m.name}", admin_merchant_path(m) %>
          </div>
        </section>
      <% end %>
    </section>

    <section id='disabled-merchants'>
      <p class='col-head'>Disabled Merchants</p>

        <% @disabled_merchants.each do |m| %>
          <section id='merchant-<%= m.id %>' class='row'>
            <div class='col-auto'>
              <%= button_to 'Enable', admin_merchant_status_path(m), method: :patch, params: { status: 'enabled' } %><br>
            </div>

            <div class='col'>
              <%= link_to "#{m.name}", admin_merchant_path(m) %>
            </div>
          </section>
        <% end %>
      </ul>
    </section>
  </div>
</div>
