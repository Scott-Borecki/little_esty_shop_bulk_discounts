<div class='col-sm-6' id='top-five-customers'>
  <p class='col-head'>
    Top Customers
  </p>

  <div class='card'>
    <table class='table-clean'>
      <tr>
        <th>No.</th>
        <th>Customer Name</th>
        <th>Transactions</th>
        <th>Items Bought</th>
        <th>Total Revenue</th>
      </tr>

      <% subject.top_customers.each_with_index do |customer, i| %>
        <tr id='top-customer-<%= customer.id %>'>
          <td><%= i + 1 %></td>
          <td><%= customer.full_name %></td>
          <td><%= customer.transaction_count %></td>
          <td><%= customer.total_items %></td>
          <td><%= number_to_currency(customer.total_revenue / 100.00) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
