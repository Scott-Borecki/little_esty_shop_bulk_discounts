<%= render partial: 'shared/merchant_dashboard_nav', locals: { merchant: @merchant } %>

<div class="row">
  <div class="col-sm-6">
    <p class='col-head'>
      Favorite Customers
    </p>

    <ol>
      <% @merchant.favorite_customers.each do |customer| %>
        <section id="customer-<%= customer.id %>">
            <li>
              <%= customer.first_name %> <%= customer.last_name %> - <%= customer.top_result %> Purchases
            </li>
        </section>
      <% end %>
    </ol>
  </div>

  <div class="col-sm-6">
    <p class='col-head'>
      Items Ready to Ship
    </p>

    <ul>
      <section id = "items_ready_to_ship" >
        <p>
          <% @merchant.ordered_items_to_ship.each do |item| %>
            <li>
              <%= item.name %> - Invoice #<%= link_to "#{item.invoice_ids}", "/merchant/#{@merchant.id}/invoices/#{item.invoice_ids[0]}" %>
              <%= item.created_at.strftime("%A, %B %-d, %Y") %>
            </li>
          <% end %>
        </p>
      </section>
    </ul>
  </div>
</div>
