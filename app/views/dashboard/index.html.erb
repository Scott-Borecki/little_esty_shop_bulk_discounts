<%= render partial: 'shared/merchant_dashboard_nav', locals: { merchant: @merchant } %>

<p>
  <%= link_to 'View All My Discounts', merchant_bulk_discounts_path(@merchant) %>
</p>

<div class='row'>
  <% # LEFT COLUMN %>
  <div class='col-sm-6'>
    <p class='col-head'>
      Favorite Customers
    </p>

    <ol>
      <% @merchant.top_customers_by_transactions.each do |customer| %>
        <section id='customer-<%= customer.id %>'>
          <li>
            <%= customer.first_name %> <%= customer.last_name %> - <%= customer.number_transactions %> Purchases
          </li>
        </section>
      <% end %>
    </ol>
  </div>

  <% # RIGHT COLUMN %>
  <div class='col-sm-6'>
    <p class='col-head'>
      Items Ready to Ship
    </p>

    <ul>
      <section id='items_ready_to_ship' >
        <p>
          <% @merchant.items_ready_to_ship.each do |invoice_item| %>
            <li>
              <%= invoice_item.item_name %> - Invoice # <%= link_to invoice_item.invoice_id, "/merchant/#{@merchant.id}/invoices/#{invoice_item.invoice_id}" %>
              <%= invoice_item.invoice_created_at.strftime('%A, %B %-d, %Y') %>
            </li>
          <% end %>
        </p>
      </section>
    </ul>
  </div>
</div>
