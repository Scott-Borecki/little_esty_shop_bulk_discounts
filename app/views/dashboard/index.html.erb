<%= render partial: 'shared/merchant_dashboard_nav', locals: { merchant: @merchant } %>

<div class="row">
  <div class="col-sm-6">
    <p class='col-head'>
      Favorite Customers
    </p>

    <ol>
      <% @merchant.favorite_customers.each do |customer| %>
        <section id="customer-<%= customer.id %>">
          <li>
            <%= customer.first_name %> <%= customer.last_name %> - <%= customer.top_result %> Purchases
          </li>
        </section>
      <% end %>
    </ol>

    <div id='bulk-discounts'>
      <p class='col-head'>
        Bulk Discounts
      </p>

      <ul>
        <% @merchant.bulk_discounts.each do |bulk_discount| %>
          Bulk Discount # <%= bulk_discount.id %>: <%= number_to_percentage(bulk_discount.percentage_discount, precision: 0) %> off for <%= bulk_discount.quantity_threshold %> item(s)
        <% end %>
      </ul>
    </div>
  </div>

  <div class="col-sm-6">
    <p class='col-head'>
      Items Ready to Ship
    </p>

    <ul>
      <section id = "items_ready_to_ship" >
        <p>
          <% @merchant.ordered_items_to_ship.each do |item| %>
            <li>
              <%= item.name %> - Invoice #
              <% item.invoice_ids.uniq.each do |invoice_id| %>
                <%= link_to invoice_id, "/merchant/#{@merchant.id}/invoices/#{invoice_id}" %>
              <% end %>
              <%= item.formatted_time %>
            </li>
          <% end %>
        </p>
      </section>
    </ul>
  </div>
</div>
